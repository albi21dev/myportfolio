<BaseLayout title="Projects" sideBarActiveItemID="services">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Services Header</div>
  </div>

  <HorizontalCard
    title="Design"
    img="/myportfolio/design.jpg"
    desc="Creating visually engaging graphics, logos, and websites to elevate your brand's identity, ensuring a cohesive and professional aesthetic presence."
    badge="NEW"
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Photo & Video"
    img="/myportfolio/photovideo.jpg"
    desc="Capturing stunning photos and producing high-quality videos that tell your story, evoke emotions, and leave a lasting impression."
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Marketing"
    img="/myportfolio/marketing.jpg"
    desc="Developing strategic marketing campaigns, optimizing SEO, and leveraging social media to boost brand awareness, engagement, and conversions effectively."
    url="#"
    badge="NEW"
  />
</BaseLayout>
