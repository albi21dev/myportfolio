---
import BaseLayout from '../layouts/BaseLayout.astro'
import HorizontalCard from '../components/HorizontalCard.astro'
import { getCollection } from 'astro:content'
import createSlug from '../lib/createSlug'

// const posts = (await getCollection('blog')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())

// const last_posts = posts.slice(0, 3)

const projects = (await getCollection('projects')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())

const last_projects = projects.slice(0, 3)
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Alberto Venturi</div>
    <div class="text-3xl py-3 font-bold">Graphic, UI/UX, Web-Designer, Photo, Video Maker & Marketing Specialist</div>
    <div class="py-2">
      <text class="text-lg">
        Whether it's visual branding, capturing the perfect shot, designing sleek graphics, craftig intuitive user experiences, building stunning websites or producing epic videos, I've got it all covered!
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://www.linkedin.com/in/albertovmsc/" target="_blank"> Let's connect!</a>
      <a href="https://calendly.com/albi21/30min" target="_blank" class="btn btn-outline ml-5">
        Schedule a call
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">What I do</div>
  </div>

  <HorizontalCard
    title="Design"
    img="/myportfolio/service_1.png"
    desc="Creating visually engaging graphics, logos, and websites to elevate your brand's identity, ensuring a cohesive and professional aesthetic presence."
    url="/myportfolio/design"
  />
  <!-- url="myportfolio/design" va sopra-->
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Photo & Video"
    img="/myportfolio/service_2.png"
    desc="Capturing stunning photos and producing high-quality videos that tell your story, evoke emotions, and leave a lasting impression."
    url="/myportfolio/photo&video"

  />
  <!-- url="/myportfolio/src/content/services/photo&video.md" -->
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Marketing & Social Media"
    img="/myportfolio/service_3.png"
    desc="Developing strategic marketing campaigns, optimizing SEO, and leveraging social media to boost brand awareness, engagement, and conversions effectively."
    url="/myportfolio/marketing/"
 
  />
  <!-- url="/myportfolio/src/content/services/marketing.md" -->
  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">My last projects</div>
  </div>

  {
    last_projects.map((project) => (
      <>
        <HorizontalCard
          title={project.data.title}
          img={project.data.heroImage}
          desc={project.data.description}
          url={"/myportfolio/projects/" + createSlug(project.data.title, project.slug)}
          target="_self"
          badge={project.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }

